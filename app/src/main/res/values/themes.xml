<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Randomness" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Color primary -->
        <item name="colorPrimary">@color/background_light</item>
        <item name="colorPrimaryVariant">@color/background_default</item>
        <item name="colorPrimaryDark">@color/card_background_dark</item>
        <!-- Other colors -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/background_default</item>
        <!-- Text -->
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textViewStyle">@style/RandomnessTextView</item>
        <item name="editTextStyle">@style/RandomnessEditText</item>
        <!-- Buttons -->
        <item name="buttonStyle">@style/RandomnessButton</item>
        <item name="materialButtonStyle">@style/RandomnessButton</item>
        <item name="android:buttonStyle">@style/RandomnessButton</item>
        <!-- Compound Buttons -->
        <item name="checkboxStyle">@style/RandomnessCheckBox</item>
        <item name="radioButtonStyle">@style/RandomnessRadioButton</item>
    </style>

    <style name="RandomnessTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="RandomnessEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">#AAFFFFFF</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="RandomnessButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_circle</item>
    </style>

    <style name="RandomnessCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:focusable">false</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:button">@drawable/compound_button_circle</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>

    <style name="RandomnessRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:focusable">false</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:button">@drawable/compound_button_circle</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>
</resources>