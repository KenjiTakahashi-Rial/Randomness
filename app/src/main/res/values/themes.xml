<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Randomness" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Color primary -->
        <item name="colorPrimary">@color/background_light</item>
        <item name="colorPrimaryVariant">@color/background_default</item>
        <item name="colorPrimaryDark">@color/card_background_dark</item>
        <!-- Other colors -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/background_default</item>
        <!-- Text -->
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textViewStyle">@style/RandomnessTextView</item>
        <!-- Buttons -->
        <item name="buttonStyle">@style/RandomnessButton</item>
        <item name="materialButtonStyle">@style/RandomnessButton</item>
        <item name="android:buttonStyle">@style/RandomnessButton</item>
    </style>

    <style name="RandomnessButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_circle</item>
    </style>

    <style name="RandomnessTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAllCaps">true</item>
    </style>
</resources>