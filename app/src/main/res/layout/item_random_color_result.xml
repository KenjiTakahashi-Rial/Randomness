<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/randomColorResultView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/randomColorResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/randomColorResultView" />

    <Button
        android:id="@+id/randomColorCopyButton"
        android:layout_width="33dp"
        android:layout_height="45dp"
        android:layout_marginEnd="112dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/randomColorResultTextView"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/copy"
        android:elevation="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/randomColorCopyButton"
        app:layout_constraintEnd_toEndOf="@+id/randomColorCopyButton"
        app:layout_constraintStart_toStartOf="@+id/randomColorCopyButton"
        app:layout_constraintTop_toTopOf="@+id/randomColorCopyButton"
        app:tint="@color/hawaii_faint_yellow"
        android:contentDescription="@string/copy" />

</androidx.constraintlayout.widget.ConstraintLayout>